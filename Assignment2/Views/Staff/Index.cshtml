@model IEnumerable<Assignment2.Models.Staff>

@{
    ViewData["Title"] = "Staff List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().StaffId)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Password)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Role)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@Html.DisplayFor(modelItem => item.StaffId)</th>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.StaffId" class="btn btn-sm btn-warning me-2">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.StaffId" class="btn btn-sm btn-info me-2">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.StaffId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
